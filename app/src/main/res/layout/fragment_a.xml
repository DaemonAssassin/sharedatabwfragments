<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    android:padding="16dp"
    tools:context=".fragment.FragmentA">

    <EditText
        android:id="@+id/et_name_f1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="Enter Your Name"
        android:inputType="text"
        android:padding="16dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_roll_no_f1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:hint="Enter Your Roll No"
        android:inputType="text"
        android:padding="16dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/et_name_f1"
        app:layout_constraintStart_toStartOf="@+id/et_name_f1"
        app:layout_constraintTop_toBottomOf="@+id/et_name_f1" />

    <EditText
        android:id="@+id/et_mobile_no_f1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:hint="Enter You Mobile No"
        android:inputType="text"
        android:padding="16dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/et_name_f1"
        app:layout_constraintStart_toStartOf="@+id/et_name_f1"
        app:layout_constraintTop_toBottomOf="@+id/et_roll_no_f1" />

    <Button
        android:id="@+id/btn_send_data_f1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Send Data"
        app:layout_constraintEnd_toEndOf="@+id/et_mobile_no_f1"
        app:layout_constraintStart_toStartOf="@+id/et_mobile_no_f1"
        app:layout_constraintTop_toBottomOf="@+id/et_mobile_no_f1" />

</androidx.constraintlayout.widget.ConstraintLayout>